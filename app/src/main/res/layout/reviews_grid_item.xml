<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_reviews_grid_item"
    android:background="@android:color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <View
        android:id="@+id/v_review_backdrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_translucent"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="by ProlateRotation"
        android:textColor="@color/white_translucent"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toTopOf="@+id/v_review_backdrop"
        app:layout_constraintLeft_toLeftOf="@+id/v_review_backdrop"
        />


    <!-- May need a programmatic limit to fit poster... -->
    <!-- Try the H,16:9 thing here and see if it makes any difference -->
    <TextView
        android:id="@+id/tv_review_paragrah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/tools_lorem_paragraph_short"
        android:textColor="@color/white_translucent"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:ellipsize="end"
        android:maxLines="6"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_author"
        app:layout_constraintLeft_toLeftOf="@+id/tv_review_author"
        app:layout_constraintRight_toRightOf="@id/v_review_backdrop"
        />


    <!-- May want rounded corners and smaller footprint to
     not steal all the limelight.  Like in collections -->
    <!-- Have you thought about Hyperlinked Text? -->
    <Button
        android:id="@+id/bt_review_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOREâ€¦"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:background="@color/orange_dark_translucent"
        android:textColor="@color/white_translucent"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_paragrah"
        app:layout_constraintRight_toRightOf="@+id/tv_review_paragrah"
        />


</android.support.constraint.ConstraintLayout>